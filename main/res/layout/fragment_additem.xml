<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_blue">

    <LinearLayout
        android:id="@+id/AddItemDialog_ParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/AddItemName_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/futura"
                android:text="@string/addItemNameInput"
                android:textColor="@color/baby_blue"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/AddItemName"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/baby_blue"
                android:fontFamily="@font/futura"
                android:inputType="text"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:imeOptions="actionDone"
                android:textColor="@color/baby_blue"
                android:textColorHint="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ItemExpirationQuery_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/futura"
                android:text="@string/addItemExpirationQuery"
                android:textColor="@color/baby_blue"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/itemExpirationQuerySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ItemExpirationDate_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/futura"
                android:text="@string/addItemExpirationDate"
                android:textColor="@color/baby_blue"
                android:textSize="15sp" />

            <DatePicker
                android:id="@+id/AddItemExpirationPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarTextColor="@color/baby_blue"
                android:yearListSelectorColor="@color/baby_blue"
                android:datePickerMode="spinner"
                android:calendarViewShown="false">
            </DatePicker>


        </LinearLayout>



    </LinearLayout>



</android.support.constraint.ConstraintLayout>