<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreenbg"
    android:fitsSystemWindows="true"
    android:minHeight="0dp"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_account_submit_button"
        app:layout_constraintVertical_bias="0.173">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="Already Have an Account?"
            android:textColor="@color/baby_blue"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Create_Account"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/futur"
            android:text="Log In"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/colorText"
            android:textSize="12sp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vplogo"
        android:layout_width="126dp"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/vplogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/futur"
        android:text="Let's Get Started!\nEnter Your Information Below."
        android:textAlignment="center"
        android:textColor="@color/baby_blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/email_text_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo"
        app:layout_constraintVertical_bias="0.651" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_text_field"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/futur"
        android:hint="Enter Username"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/accent_brown"
        android:textColorHint="@color/accent_brown"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_text_field3"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/futur"
        android:hint="Enter E-mail Address"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/accent_brown"
        android:textColorHint="@color/accent_brown"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_text_field4"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/futur"
        android:hint="Enter a Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/accent_brown"
        android:textColorHint="@color/accent_brown"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_text_field5"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/futur"
        android:hint="Re-Enter Password"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/accent_brown"
        android:textColorHint="@color/accent_brown"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo" />

    <Button
        android:id="@+id/create_account_submit_button"
        android:layout_width="167dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/submitlinkbtn"
        android:fontFamily="@font/futur"
        android:text="@string/Create_Account"
        android:textAllCaps="false"
        android:textColor="@color/baby_blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_text_field5"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>

