<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreenbg"
    android:fitsSystemWindows="true"
    tools:context=".LoginScreenActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/vplogo"
        android:layout_width="155dp"
        android:layout_height="118dp"
        android:layout_marginTop="191dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/vplogo"
        app:layout_constraintBottom_toTopOf="@+id/username_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/username_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="106dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/login_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplogo">

        <ImageView
            android:id="@+id/username_icon"
            android:layout_width="13dp"
            android:layout_height="14dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginscreenidicon"
            android:contentDescription="@string/app_name" />


        <EditText
            android:id="@+id/email"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/baby_blue"
            android:fontFamily="@font/futura"
            android:hint="@string/Username"
            android:cursorVisible="false"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/baby_blue"
            android:textColorHint="@color/colorText"
            android:textSize="15sp"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="18dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/login_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_container"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/loginscreenpasswordlockicon"
            android:contentDescription="@string/Password" />

        <EditText
            android:id="@+id/password"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/baby_blue"
            android:fontFamily="@font/futur"
            android:hint="@string/Password"
            android:cursorVisible="false"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/baby_blue"
            android:textColorHint="@color/colorText"
            android:textSize="15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/ForgotPassword"
        android:layout_width="149dp"
        android:layout_height="37dp"
        android:layout_marginBottom="169dp"
        android:fontFamily="@font/futur"
        android:text="@string/Forgot_Password"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_submit" />

    <Button
        android:id="@+id/login_submit"
        android:layout_width="181dp"
        android:layout_height="35dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/loginbutton"
        android:fontFamily="@font/futur"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/ForgotPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_container" />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ForgotPassword"
        app:layout_constraintVertical_bias="1.0">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futur"
            android:text="@string/accountCreateQuery"
            android:textColor="@color/baby_blue"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Create_Account"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/futur"
            android:text="@string/Create_Account"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ForgotPassword" />

    </android.support.v7.widget.LinearLayoutCompat>


</android.support.constraint.ConstraintLayout>