<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/statusviewbg">

    <LinearLayout
        android:id="@+id/AddItemDialog_ParentLayout"
        android:layout_width="382dp"
        android:layout_height="136dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.598"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/set_empty_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="18dp"
            android:layout_height="121dp"
            android:layout_weight="1"
            android:background="@drawable/statusouticon"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/set_low_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="15dp"
            android:layout_height="124dp"
            android:layout_weight="1"
            android:background="@drawable/statuslowicon"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/set_full_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="15dp"
            android:layout_height="124dp"
            android:layout_weight="1"
            android:background="@drawable/statusfullicon"
            android:fontFamily="@font/futura"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />


    </LinearLayout>


    <Button
        android:id="@+id/item_delete_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="163dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/statusdeleteicon"
        android:fontFamily="@font/futura"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddItemDialog_ParentLayout"
        app:layout_constraintVertical_bias="0.025" />


</android.support.constraint.ConstraintLayout>