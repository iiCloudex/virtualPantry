<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/pantrybackground"/>

    <Button
        android:id="@+id/closepantry"
        android:layout_width="315dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@layout/closepantrybutton"
        android:fontFamily="@font/futura"
        android:text="@string/closebutton"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/spices"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/oils"
        android:layout_marginStart="32dp"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/spicescategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/oils"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/oilscategory"
        android:textColor="#000000"
        android:textSize="17sp" />


    <Button
        android:id="@+id/nonfoods"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/spices"
        android:layout_marginEnd="32dp"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/allitems"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/fruits"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spices"
        android:layout_marginBottom="209dp"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/fruitscategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/vegies"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/fruits"
        android:layout_centerHorizontal="true"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/vegiescategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/drinks"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignStart="@+id/nonfoods"
        android:layout_alignTop="@+id/fruits"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/drinkscategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/dairy"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spices"
        android:layout_marginTop="275dp"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/dairycategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/grains"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/dairy"
        android:layout_centerHorizontal="true"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/grainscategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <Button
        android:id="@+id/meat"
        android:layout_width="102dp"
        android:layout_height="81dp"
        android:layout_alignStart="@+id/nonfoods"
        android:layout_alignTop="@+id/dairy"
        android:background="@layout/categorybutton"
        android:fontFamily="@font/futura"
        android:text="@string/meatcategory"
        android:textColor="#000000"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/notifications"
        android:layout_width="340dp"
        android:layout_height="205dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:contentDescription="@string/notifications"
        app:srcCompat="@mipmap/notifications" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notifications"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-57dp"
        android:fontFamily="@font/futura"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>