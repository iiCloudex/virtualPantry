<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="VirtualPantryAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/baby_blue</item>
        <item name="android:colorForeground">@color/baby_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/futura</item>
    </style>

    <style name="AddItemDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/secondary_blue</item>
        <item name="android:textColor">@color/baby_blue</item>
        <item name="android:fontFamily">@font/futura</item>
        <item name="android:textColorPrimaryInverse">?attr/colorPrimary</item>
        <item name="android:colorBackground">@color/secondary_blue</item>
        <item name="colorPrimary">@color/secondary_blue</item>
        <item name="android:colorForeground">@color/secondary_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="VirtualPantryAppTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/secondary_blue</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
